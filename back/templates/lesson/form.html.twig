{% extends 'base.html.twig' %}

{% block title %}Hello LessonController!{% endblock %}

{% block body %}

{# Get the current route #}
{% set route = app.request.attributes.get('_route')%}

{% for key, flash in app.flashes %}
    {% for message in flash %}
        <div class="alert alert-{{ key }}" role="alert">
            <p>{{ message }}</p>
        </div>
    {% endfor %}
{% endfor %}


{{ form_start(form) }}

    <button type="submit" class="">{{ route == 'lesson_add' ? 'Ajouter' : 'Modifier' }}</button>

{{ form_rest(form) }}
{{ form_end(form) }}


{% if(route == 'lesson_edit')%}

    {{ form_start(formDelete)}}

        {{ form_widget(formDelete.deleteButton, {'attr': {'class': 'btn-danger'}}) }}

    {{ form_end(formDelete) }}

{% endif %}

{% endblock %}
