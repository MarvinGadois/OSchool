{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

<main class="m-4">

    <h1>O'school doc</h1>


    <section>
        <h2>Publiques (unsecured)</h2>

        <h3>Doc</h3>

        <div class="card text-white bg-secondary mb-3 row">
            <div class="card-header py-1">GET</div>
            <div class="card-body py-1">
                <p class="card-text">/api/v1/doc</p>
            </div>
            <div class="card-footer py-1">Affiche la documentation des routes</div>
        </div>

        <h3>Opinion</h3>

        <div class="card text-white bg-secondary mb-3 row">
            <div class="card-header py-1">GET</div>
            <div class="card-body py-1">
                <p class="card-text">/api/unsecured/v1/opinion</p>
            </div>
            <div class="card-footer py-1">Affiche la liste de tous les avis</div>
        </div>

        <h3>News</h3>

        <div class="card text-white bg-secondary mb-3 row">
            <div class="card-header py-1">GET</div>
            <div class="card-body py-1">
                <p class="card-text">/api/unsecured/v1/news</p>
            </div>
            <div class="card-footer py-1">Affiche la liste de toutes les news de la platform oschool</div>
        </div>

        <div class="card text-white bg-secondary mb-3 row">
            <div class="card-header py-1">GET</div>
            <div class="card-body py-1">
                <p class="card-text">/api/unsecured/v1/news/{id}</p>
            </div>
            <div class="card-footer py-1">Affiche une news de la platform oschool en fonction de son id</div>
        </div>
    
    </section>

    <section>
        <h2>Privées (secured)</h2>

        <h3>News</h3>

        <div class="card text-white bg-secondary mb-3 row">
            <div class="card-header py-1">GET</div>
            <div class="card-body py-1">
                <p class="card-text">/api/secured/v1/news</p>
            </div>
            <div class="card-footer py-1">Affiche la liste de toutes les news</div>
        </div>

        <div class="card text-white bg-secondary mb-3 row">
            <div class="card-header py-1">GET</div>
            <div class="card-body py-1">
                <p class="card-text">/api/secured/v1/news/school/{id}</p>
            </div>
            <div class="card-footer py-1">Affiche la liste de toutes les news d'une école en fonction de l'id de l'école</div>
        </div>

        <div class="card text-white bg-secondary mb-3 row">
            <div class="card-header py-1">GET</div>
            <div class="card-body py-1">
                <p class="card-text">/api/secured/v1/news/{id}</p>
            </div>
            <div class="card-footer py-1">Affiche une news en fonction de son id</div>
        </div>
    
    </section>

</main>

